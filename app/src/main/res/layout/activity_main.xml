<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/opacitywhiterec"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/pick_a_book"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_20"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@null"
        android:src="@drawable/bookmarker" />

    <TextView
        android:id="@+id/search_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/search_for_books"
        android:textColor="@color/opacity"
        android:textSize="@dimen/textSize_20"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_textView"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/search_key"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/textSize_20"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_toEndOf="@id/search_key"
            android:layout_toRightOf="@id/search_key"
            android:background="@null"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/search" />
    </RelativeLayout>
</RelativeLayout>

